# 服务配置
PORT=7860
ENVIRONMENT=development

# AI 服务配置
AI_PROVIDER=deepseek
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# 备用 OpenAI 配置（可选）
OPENAI_API_KEY=your-openai-api-key-here

# 阿里云服务配置
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-access-key-secret

# 阿里云智能语音配置（用于语音识别和合成）
ALIYUN_NLS_APPKEY=your-nls-appkey-here
ALIYUN_NLS_TOKEN=your-nls-token-here

# 通义千问配置（用于多模态视频解析）
DASHSCOPE_API_KEY=your-dashscope-api-key-here

# 数据库配置
SQLITE_DB_PATH=./data/asd_intervention.db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=asd_knowledge
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# 服务开关（Mock/Real）
USE_REAL_SQLITE=false
USE_REAL_GRAPHITI=false
USE_REAL_RAG=false
USE_REAL_VIDEO_ANALYSIS=false
USE_REAL_SPEECH=false
USE_REAL_DOCUMENT_PARSER=false

# JWT 配置
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600

# Redis 配置（可选，用于任务队列）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
