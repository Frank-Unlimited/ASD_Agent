# 服务配置
PORT=7860
ENVIRONMENT=development

# LLM 统一配置（所有模块通过这些配置访问 LLM）
# 示例1: 使用 Qwen (通义千问)
LLM_API_KEY=your-api-key-here
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_MODEL=qwen-plus
LLM_SMALL_MODEL=qwen-flash
LLM_EMBEDDING_MODEL=text-embedding-v3
LLM_EMBEDDING_DIM=1536

# 示例2: 使用 DeepSeek (取消注释并注释上面的配置)
# LLM_API_KEY=your-deepseek-api-key
# LLM_BASE_URL=https://api.deepseek.com/v1
# LLM_MODEL=deepseek-chat
# LLM_SMALL_MODEL=deepseek-chat
# LLM_EMBEDDING_MODEL=deepseek-chat
# LLM_EMBEDDING_DIM=1536

# 示例3: 使用 OpenAI (取消注释并注释上面的配置)
# LLM_API_KEY=your-openai-api-key
# LLM_BASE_URL=https://api.openai.com/v1
# LLM_MODEL=gpt-4o-mini
# LLM_SMALL_MODEL=gpt-4o-mini
# LLM_EMBEDDING_MODEL=text-embedding-3-small
# LLM_EMBEDDING_DIM=1536

# 阿里云服务配置（用于语音、多模态等服务）
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
ALIYUN_NLS_APPKEY=your-nls-appkey-here
ALIYUN_NLS_TOKEN=your-nls-token-here
DASHSCOPE_API_KEY=your-dashscope-api-key-here

# 数据库配置
SQLITE_DB_PATH=./data/asd_intervention.db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=asd_knowledge
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# 服务开关（Mock/Real）
USE_REAL_SQLITE=true
USE_REAL_GRAPHITI=true
USE_REAL_RAG=false
USE_REAL_VIDEO_ANALYSIS=true
USE_REAL_SPEECH=true
USE_REAL_DOCUMENT_PARSER=true

# Neo4j 配置（Graphiti 时序知识图谱）
NEO4J_URI=bolt://localhost:7688
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# 阿里云百炼 RAG 知识库配置
ALIBABA_CLOUD_ACCESS_KEY_ID=your-access-key-id
ALIBABA_CLOUD_ACCESS_KEY_SECRET=your-access-key-secret
ALIBABA_WORKSPACE_ID=your-workspace-id
ALIBABA_INDEX_ID=your-index-id

# 业务服务开关（需要 LLM）
USE_REAL_ASSESSMENT=true
USE_REAL_CHAT=true

# JWT 配置
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600

# Redis 配置（可选，用于任务队列）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
